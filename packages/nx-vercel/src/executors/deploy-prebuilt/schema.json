{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "Deploy prebuilt executor",
  "description": "",
  "type": "object",
  "properties": {
    "buildPath": {
      "type": "string",
      "description": "The output path of the build task.",
      "example": "dist/apps/my-app"
    },
    "prod": {
      "type": "boolean",
      "description": "Whether to create a production deployment (true), or preview deployment (false).",
      "default": false
    },
    "debug": {
      "description": "Increases logging verbosity.",
      "type": "boolean",
      "default": false
    },
    "postTargets": {
      "$ref": "#/definitions/PostTargetsOptions"
    }
  },
  "required": ["buildPath"],
  "definitions": {
    "__COMMENT__": {
      "type": "object",
      "title": "These are inlined because Nx's parser does not support remote references ðŸ˜ž"
    },
    "Target": {
      "title": "Target",
      "type": "object",
      "properties": {
        "project": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "configuration": {
          "type": "string"
        }
      },
      "required": ["project", "target"]
    },
    "TargetWithOptions": {
      "title": "TargetWithOptions",
      "type": "object",
      "properties": {
        "target": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/definitions/Target"
            }
          ]
        },
        "overrides": {
          "type": "object"
        }
      },
      "required": ["target"]
    },
    "PostTargetsOptions": {
      "title": "PostTargetsOptions",
      "type": "object",
      "properties": {
        "onSuccess": {
          "$ref": "#/definitions/PostTargets"
        },
        "onFailure": {
          "$ref": "#/definitions/PostTargets"
        }
      }
    },
    "PostTargets": {
      "title": "PostTargets",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "string"
          },
          {
            "$ref": "#/definitions/Target"
          },
          {
            "$ref": "#/definitions/TargetWithOptions"
          }
        ]
      }
    }
  }
}
