{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "title": "PrComment executor",
  "description": "",
  "type": "object",
  "properties": {
    "prNumber": {
      "type": ["number", "string"]
    },
    "message": {
      "$ref": "#/definitions/Message"
    },
    "sticky": {
      "$ref": "#/definitions/StickyOptions"
    }
  },
  "required": ["message"],
  "definitions": {
    "Message": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["inline", "file"]
        },
        "content": {
          "type": "string"
        },
        "variables": {
          "type": "object"
        }
      },
      "required": ["type", "content"]
    },
    "StickyOptions": {
      "type": "object",
      "properties": {
        "header": {
          "type": "string"
        },
        "append": {
          "type": "boolean",
          "default": false
        },
        "action": {
          "type": "string",
          "enum": ["recreate", "update"],
          "default": "update"
        }
      },
      "required": ["header"]
    }
  }
}
