{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/test-deployments/nextjs",
  "projectType": "application",
  "implicitDependencies": ["nx-vercel"],
  "targets": {
    "pull": {
      "executor": "nx-vercel:pull",
      "defaultConfiguration": "development",
      "options": {
        "projectId": "prj_QRlvqszLBvhucWoYCRb1ThT68HbM",
        "orgId": "W6HyWd7KuWHwANJlqrwO1sJN"
      },
      "configurations": {
        "development": {
          "environment": "development",
          "outputEnvFile": ".env.development.local"
        },
        "preview": {
          "environment": "preview",
          "outputEnvFile": ".env.production.local"
        },
        "production": {
          "environment": "production",
          "outputEnvFile": ".env.production.local"
        }
      }
    },
    "build": {
      "dependsOn": [{ "projects": "self", "target": "pull" }],
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "packages/test-deployments/nextjs",
        "outputPath": "dist/packages/test-deployments/nextjs"
      },
      "configurations": {
        "development": {
          "outputPath": "tmp/packages/test-deployments/nextjs"
        },
        "preview": {},
        "production": {}
      }
    },
    "serve": {
      "dependsOn": [{ "projects": "self", "target": "pull" }],
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "test-deployments-nextjs:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "test-deployments-nextjs:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "test-deployments-nextjs:build:production",
          "dev": false
        }
      }
    },
    "deploy": {
      "dependsOn": [{ "projects": "self", "target": "build" }],
      "executor": "nx-vercel:deploy-prebuilt",
      "options": {
        "buildPath": "dist/packages/test-deployments/nextjs",
        "postTargets": ["test-deployments-nextjs:deploy-pr-comment"]
      },
      "configurations": {
        "preview": {},
        "production": {
          "prod": true
        }
      }
    },
    "deploy-pr-comment": {
      "executor": "nx-github:pr-comment",
      "options": {
        "message": {
          "type": "inline",
          "content": "Deployed at $VERCEL_DEPLOYMENT_URL\nInspect at $VERCEL_INSPECT_URL"
        },
        "sticky": {
          "header": "vercel-deployment"
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "test-deployments-nextjs:build:production"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/test-deployments/nextjs/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": ["test-deployment"]
}
